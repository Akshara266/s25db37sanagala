 extends layout

block content
  h1 Search Results: Gadgets

  - let items = results

  .container-fluid
    .row
      each gadget, index in items
        .col-sm-2(
          onclick=`buy(${index})`, 
          style="cursor: pointer; border: 1px solid gray; padding: 10px; margin: 5px;"
        )
          h5 #{gadget.gadget_name}
          p Brand: #{gadget.brand}
          p Battery: #{gadget.battery_life} hrs

  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
